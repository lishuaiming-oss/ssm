<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javakc.ssm.attachment.dao.AttachmentDao">

    <select id="queryAll" resultType="Attachment">
        select id,name,real_name,file_path,type,sizes,create_time,down_number,state from ssm_attachment
    </select>

    <select id="queryById" resultType="Attachment">
        select id,name,real_name,file_path,type,sizes,create_time,down_number,state from ssm_attachment where id=#{id}
    </select>

    <insert id="insert"  parameterType="Attachment">
       insert into ssm_attachment(name,real_name,file_path,type,sizes,create_time,down_number,state)
            values(#{name},#{realName},#{filePath},#{type},#{sizes},#{createTime},#{downNumber},#{state})
    </insert>

   <delete id="delete" parameterType="int" >
       delete from ssm_attachment where id=#{id}
   </delete>

</mapper>